<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/name_of_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="项目名称"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:layout_margin="10dp" />
        <TextView
            android:id="@+id/name_of_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="技术要求"
            android:textSize="15dp"
            android:textColor="#aba8a8"
            android:layout_below="@+id/name_of_project"
            android:layout_marginLeft="10dp"/>



        <TextView
            android:id="@+id/number_of_member"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="人数"
            android:textSize="15dp"
            android:textColor="#aba8a8"
            android:layout_below="@+id/name_of_teacher"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textSize="15dp"
            android:textColor="#938d8d"
            android:layout_below="@+id/name_of_teacher"
            android:layout_toRightOf="@+id/number_of_member"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/produce_of_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="项目简介……"
            android:textColor="#aba8a8"
            android:textSize="15dp"
            android:layout_below="@+id/name_of_teacher"
            android:layout_toRightOf="@+id/line"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/imageView33"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#a4a2b5"
        android:layout_marginTop="5dp"/>
</LinearLayout>
