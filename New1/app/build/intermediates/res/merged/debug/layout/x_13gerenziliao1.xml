<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"

              android:orientation="vertical"
    android:weightSum="1">

    <!-- 分割线 -->
    <!-- 分割线 -->
    <!-- 分割线 -->
    <!-- 分割线 -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/headerbackground"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:gravity="center"
                    android:text="个人资料"
                    android:textColor="#ffffff"
                    android:textSize="25dp" />

            </LinearLayout>
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="姓名必填，专长用逗号分隔"
                android:textColor="@color/black">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageid0"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        app:srcCompat="@mipmap/account" />

                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/imageid0"
                        android:text=" id："
                        android:textColor="#848484"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/textView50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/phone"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/imageid0"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="18dp" />
                </RelativeLayout>


            </LinearLayout>

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/divider2" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageid1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        app:srcCompat="@mipmap/bussiness_card" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"

                        android:layout_toRightOf="@+id/imageid1"
                        android:text="姓名："
                        android:textColor="#848484"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/editText4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/name"
                        android:layout_alignStart="@+id/name"
                        android:layout_below="@+id/name"
                        android:ems="10"
                        android:hint=""
                        android:inputType="textPersonName"
                        android:maxLength="10"
                        android:textColor="#000000"
                        android:textSize="18dp" />

                </RelativeLayout>


            </LinearLayout>

            <ImageView
                android:id="@+id/imageView51"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/divider2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageid2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        app:srcCompat="@mipmap/email" />

                    <TextView
                        android:id="@+id/mail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/imageid2"
                        android:text="邮箱地址："
                        android:textColor="#848484"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/editText9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/mail"
                        android:layout_alignStart="@+id/mail"
                        android:layout_below="@+id/mail"
                        android:layout_marginBottom="10dp"
                        android:ems="10"
                        android:hint=""
                        android:inputType="textPersonName"
                        android:maxLength="20"
                        android:textColor="#000000"
                        android:textSize="18dp" />

                </RelativeLayout>


            </LinearLayout>

            <ImageView
                android:id="@+id/imageView76"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/divider2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/editTextSchool"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/school"
                        android:layout_alignStart="@+id/school"
                        android:layout_below="@+id/school"
                        android:layout_marginBottom="10dp"
                        android:ems="10"
                        android:hint="中南大学"
                        android:inputType="textPersonName"
                        android:maxLength="15"
                        android:textColor="#000000"
                        android:textSize="18dp" />

                    <Spinner
                        android:id="@+id/chooseTextSchool"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/editTextSchool"
                        android:layout_toEndOf="@+id/school"
                        android:layout_toRightOf="@+id/school"
                        android:ems="10"
                        android:entries="@array/spingarr"
                        android:hint=""
                        android:inputType="textPersonName"
                        android:maxLength="15"
                        android:textColor="#000000"
                        android:textSize="18dp" />

                    <ImageView
                        android:id="@+id/imageid3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        app:srcCompat="@mipmap/office" />

                    <TextView
                        android:id="@+id/school"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/imageid3"
                        android:text=" 所属学校："
                        android:textColor="#848484"
                        android:textSize="16dp" />

                </RelativeLayout>


            </LinearLayout>

            <ImageView
                android:id="@+id/imageView77"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/divider2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/editText15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/strong"
                        android:layout_alignStart="@+id/strong"
                        android:layout_below="@+id/strong"
                        android:layout_marginBottom="10dp"
                        android:ems="10"
                        android:hint=""
                        android:inputType="textMultiLine"
                        android:maxLength="20"
                        android:textColor="#000000"
                        android:textSize="18dp" />

                    <ImageView
                        android:id="@+id/imageid4"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        app:srcCompat="@mipmap/zhuanchang" />

                    <TextView
                        android:id="@+id/strong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/imageid4"
                        android:text="技术专长："
                        android:textColor="#848484"
                        android:textSize="16dp" />

                </RelativeLayout>


            </LinearLayout>

            <ImageView
                android:id="@+id/imageView78"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/divider2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/editTextIntroduction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/self"
                        android:layout_alignStart="@+id/self"
                        android:layout_below="@+id/self"
                        android:layout_marginBottom="10dp"
                        android:ems="10"
                        android:hint=""
                        android:inputType="textMultiLine"
                        android:maxLength="50"
                        android:textColor="#000000"
                        android:textSize="18dp" />

                    <ImageView
                        android:id="@+id/imageid5"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        app:srcCompat="@mipmap/text" />

                    <TextView
                        android:id="@+id/self"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/imageid5"
                        android:text="个人简介："
                        android:textColor="#848484"
                        android:textSize="16dp" />

                </RelativeLayout>


            </LinearLayout>

            <ImageView
                android:id="@+id/imageView79"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/divider2" />

            <Button
                android:id="@+id/button25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/button_shape"
                android:text="提交"
                android:textColor="#ffffff"
                android:textSize="22dp" />

        </LinearLayout>
    </ScrollView>


    <!-- 分割线 -->

    <!-- 分割线 -->

    <!-- 分割线 -->

    <!-- 分割线 -->

</LinearLayout>
