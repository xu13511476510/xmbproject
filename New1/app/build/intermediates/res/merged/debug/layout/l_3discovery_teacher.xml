    <LinearLayout
        android:id="@+id/title_homepage"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_weight="1"
        android:elevation="2dp">


        <EditText
            android:id="@+id/search"
            android:layout_width="272dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:hint="搜索学生手机号或专长"
            android:textColor="#c5c6c6"
            android:textColorHint="#c5c6c6"
            android:iconifiedByDefault="false"
            android:maxLength="15"/>


        <TextView
            android:id="@+id/jiedan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:text="搜索"
            android:textColor="#ffffff"
            android:textSize="18dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textColor="#ffffff"
        android:layout_gravity="center">
    </TextView>
    <ImageView
        android:id="@+id/imageView29"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/divider" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_stu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:clipToPadding="false" />

    <ImageView
        android:id="@+id/imageView31"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/divider" />

    <com.bianlaoshi.new1.TeacherBottom
        android:id="@+id/l_3_titleLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="1" />
</LinearLayout>
