                    app:srcCompat="@mipmap/iconattachment3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#50d2c2">
                    <TextView
                        android:id="@+id/text3211_1"
