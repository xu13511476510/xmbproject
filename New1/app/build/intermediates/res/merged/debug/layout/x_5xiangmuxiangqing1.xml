        android:layout_alignBottom="@+id/pteacher"
        android:layout_toEndOf="@+id/pteacher"
        android:layout_toRightOf="@+id/pteacher"
        android:textColor="#dcdcdc"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/textView62"
        android:layout_toEndOf="@+id/pname"
        android:layout_toRightOf="@+id/pname"
        android:gravity="center"
        android:textColor="#dcdcdc"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/imageView62"
