<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp">

       <ImageView
           android:id="@+id/imageView22"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentBottom="true"
           android:layout_alignParentLeft="true"
           android:layout_alignParentStart="true"
           app:srcCompat="@drawable/divider" />

       <ImageView
           android:id="@+id/stu_image"
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:layout_alignParentLeft="true"
           android:layout_alignParentStart="true"
           android:layout_centerVertical="true"
           android:layout_gravity="center_vertical"
           android:layout_marginLeft="12dp"
           android:layout_marginStart="12dp"
            android:src="@mipmap/head3"/>

       <TextView
           android:id="@+id/stu_name"
           android:layout_width="200dp"
           android:layout_height="wrap_content"
           android:layout_alignTop="@+id/stu_image"
           android:layout_marginLeft="20dp"
           android:layout_marginStart="20dp"
           android:textColor="#ffFFFF66"
           android:layout_toEndOf="@+id/stu_image"
           android:layout_toRightOf="@+id/stu_image"
           android:textSize="18dp"
           android:text="姓名"/>

       <TextView
           android:id="@+id/text_advantage"
           android:layout_width="270dp"
           android:layout_height="20dp"
           android:layout_alignBottom="@+id/stu_image"
           android:layout_alignLeft="@+id/stu_name"
           android:layout_alignStart="@+id/stu_name"
           android:layout_gravity="center_vertical"
           android:text="特长"
           android:textColor="#ffffff"
           android:textSize="16dp" />

       <TextView
           android:id="@+id/stu_advantage"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignTop="@+id/text_advantage"
           android:layout_marginLeft="12dp"
           android:layout_marginStart="12dp"
           android:layout_toEndOf="@+id/text_advantage"
           android:layout_toRightOf="@+id/text_advantage"
           android:textColor="#ffffff"
           android:textSize="16dp" />
       <TextView
           android:id="@+id/stu_school"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBaseline="@+id/stu_name"
           android:layout_toLeftOf="@+id/imageView32"
           android:text="湖南大学"
           android:textColor="#ffffff"
           android:textSize="12dp"
           android:layout_marginRight="10dp"/>

       <ImageView
           android:id="@+id/imageView32"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerVertical="true"
          android:layout_alignParentRight="true"
           android:layout_marginRight="15dp"
           android:src="@mipmap/setting_arrow"
           />


</RelativeLayout>
