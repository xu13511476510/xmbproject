<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gardlient_background_btot"
        android:layout_gravity="bottom">
        <RelativeLayout
            android:id="@+id/homepage"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_weight="1">
            <ImageView
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:id="@+id/image_homepage"
                android:src="@mipmap/homepage"
                android:layout_centerHorizontal="true"
                android:layout_margin="4sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview_homepage"
                android:text="首页"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/image_homepage"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/find"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_weight="1">
            <ImageView
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:id="@+id/image_discovery"
                android:src="@mipmap/discovery"
                android:layout_centerHorizontal="true"
                android:layout_margin="4sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview_discovery"
                android:text="发现"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/image_discovery"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mine"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_weight="1">
            <ImageView
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:id="@+id/image_mine"
                android:src="@mipmap/mine"
                android:layout_centerHorizontal="true"
                android:layout_margin="4sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview_mine"
                android:text="我的"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/image_mine"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
